@model IEnumerable<demoCuoiky_2.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-wrap">
    <table class="hinet-table table table-striped table-hover" cellspacing="0" width="100%">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Department.deptname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.addr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.image)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.deptname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.addr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.image)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id=item.eid }) |
                        @Html.ActionLink("Details", "Details", new { id=item.eid }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.eid })*@
                    <div class="btn-group">
                        <button data-toggle="dropdown" class="btn btn-xs btn-primary btn-white dropdown-toggle" aria-expanded="false">
                            Thao tác<i class="ace-icon fa fa-angle-down icon-on-right"></i>
                        </button>
                        <ul class="dropdown-menu">

                            <li><a href="javascript:void(0)" onclick="CreateAction('/QLCoQuanArea/QLCoQuan/Create/?id=@item.eid')" title="Thêm cơ quan trực thuộc"><i class="fa fa-plus"></i> Thêm cơ quan trực thuộc</a> </li>

                            <li><a id="@item.eid" title='Chi tiết' class='toggle-name'><i class='fa fa-info-circle'></i> Thông tin</a></li>

                            <li><a href='/QLCoQuanArea/QLCoQuan/Detail/?id=@item.eid' title='Chi tiết'><i class='fa fa-info-circle'> </i> Thông tin chi tiết</a> </li>

                            <li><a href='javascript:void(0)' onclick='EditAction("/QLCoQuanArea/QLCoQuan/Edit/?id=@item.eid")' title='Chỉnh sửa'><i class='glyphicon glyphicon-edit'> </i> Sửa thông tin</a> </li>

                            <li><a href='javascript:void(0)' onclick='DeleteAction("/QLCoQuanArea/QLCoQuan/Delete/?id=@item.eid")' title='Xóa'><i class=' glyphicon glyphicon-remove' style='color:red'> </i> Xóa</a></li>

                        </ul>
                    </div>
                </td>
            </tr>
        }

    </table>
</div>
