<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/Scripts/js/jquery.gritter.min.css" rel="stylesheet" />

    <link href="~/Content/select2.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/js/jquery.gritter.min.js" onload="gritterLoaded = true;"></script>
    <script src="~/Scripts/Plugin/select2.min.js"></script>
    <script src="~/Scripts/Plugin/Pagination.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js" integrity="sha512-fD9DI5bZwQxOi7MhYWnnNPlvXdp/2Pj3XSTRrFs5FQa4mizyGLnJcN6tuvUS6LbmgN1ut+XGSABKvjN0H6Aoow==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/Scripts/js/Common.js"></script>
</head>
<body>
    <center style="margin-bottom:20px">
        <a href="~/Employees/GetIndex">Danh sách sử dụng ajax, Jquery</a> &nbsp;|&nbsp;
        @Html.ActionLink("Danh sách nhân viên", "Index", "Employees") &nbsp;|&nbsp;
        @{ Html.RenderAction("Category", "Employees");}
        @if (Session["username"] == null)
        {
            <a href="/Accouts/Login">Login</a>
        }
        else
        {
            <label>Chào mừng @Session["username"]</label>
            <a href="/Accouts/Logout">Logout</a>
        }
    </center>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            <input type="button" name="btn-checkNoti" id="btn-checkNoti" value="button" />
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

<script>
    $("#btn-checkNoti").click(function () {
        
    })
    if (gritterLoaded) {
        NotiSuccess("Thông báo", "Nội dung thông báo");
    }
    else {
        colsole.log("oc");
    }
</script>
</body>
</html>
